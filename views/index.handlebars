<img src="../public/img/cute-burger.png" alt="cute burger" width="200" height="300">

<h1>Eat-Da-Burger!</h1>

<form>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</form>


<h2>Add a Burger</h2>

<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit" id="add-burger">Submit</button>
  <p>Enter a burger you want to eat.</p>
  <p>Click the "Submit" button.</p>
</form>

<form>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</form>
