<div class="burger-and-title">
  <img class="stacking-burger">
  <h1>Eat-Da-Burger!</h1>
</div>

<div class="whole-burgers">
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="devoured-burgers">
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block-devoured devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="newburg" name="name">
  </div>
  <div class="submit-group">
    <button type="submit" id="add-burger">Submit</button>
    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
  </div>
</form>
